<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Entry Placeholder="product" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" MaximumHeightRequest="60"/>
        <Button Text="Add Product" Grid.Row="0" Grid.Column="2" MaximumHeightRequest="50"/>
        <CollectionView ItemsSource="{Binding Products}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="Empty" />
                </DataTemplate> 
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Delete" Grid.Row="2" Grid.Column="1" MaximumHeightRequest="60" />


    </Grid>

</ContentPage>
